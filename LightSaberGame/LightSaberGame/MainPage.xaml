<Page
    x:Class="LightSaberGame.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LightSaberGame"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls ="using:LightSaberGame.Views"
    xmlns:attachedProperties ="using:LightSaberGame.Extensions"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!--<userControls:LightSaber x:Name="saber"></userControls:LightSaber>-->

        <Rectangle Name="blade" Height="300" Width="50" Fill="Blue" HorizontalAlignment="Center" VerticalAlignment="Center"
                   attachedProperties:AnimationProperties.ExtendCollapse="True"/>

        <Button Content="Extend" Click="Button_Click"></Button>
    </Grid>
</Page>
